<h1>Publicaciones</h1>

{{#each publicaciones}}
  <div class='post'>
    <h2>{{titulo}}</h2>
    <p>{{texto}}</p>
    <p>{{descripcion}}</p>
    <p>Publicado por:
      {{#if isOwnProfile}}
        <a href='/{{username}}'>{{username}}</a>
      {{else}}
        {{#if anonimato}}
          {{#if anonToken}}
            <a href='/anonprofile/{{anonToken}}'>anonimo</a>
          {{/if}}
        {{else}}
          <a href='/{{username}}'>{{username}}</a>
        {{/if}}
      {{/if}}
    </p>
  </div>
{{/each}}